<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.alexlowe.tobe.MainActivity"
    tools:showIn="@layout/fragment_entry">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am going to..."/>

    <EditText
        android:id="@+id/action_editText"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:capitalize="none"
        android:singleLine="true"
        android:imeOptions="actionGo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To be a..."/>

    <EditText
        android:gravity="center_vertical"
        android:id="@+id/toBe_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:capitalize="none"
        android:singleLine="false"
        android:imeOptions="actionGo"/>

    <Button
        android:id="@+id/enter_button"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/borderlessButtonStyle"
        android:onClick="addToBe"
        android:text="Enter"/>
</LinearLayout>